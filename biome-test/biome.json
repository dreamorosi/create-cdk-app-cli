{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineEnding": "lf"
  },
  "javascript": {
    "formatter": {
      "semicolons": "always",
      "bracketSpacing": true,
      "quoteStyle": "single",
      "trailingCommas": "es5"
    }
  },
  "files": {
    "includes": [
      "**",
      "!**/.cache",
      "!**/.claude",
      "!**/.vscode",
      "!**/.amazonq",
      "!**/api",
      "!**/site",
      "!**/.devcontainer",
      "!**/node_modules",
      "!**/.tsbuildinfo",
      "!**/coverage",
      "!**/lib",
      "!**/cdk.out",
      "!**/site",
      "!**/.aws-sam",
      "!**/*.generated.js",
      "!**/*.generated.d.ts"
    ]
  }
}
